<h1>Articles</h1>
<div class='container'>
  <div class="img-box-4 text-center">
    <div class="row">
    <hr>
      <div>
        <% @articles.each do |article| %>
          <div class="col-md-3 col-sm-6" style="width:287.5px;height:200px;">

            <div class="img-box-4-content">
          
              <div class="bor bg-orange"></div>
                <p>Title: <a href="/articles/<%= article.id %>"><%= article.name %></a></p>
                <p>Author: <%= article.author %><p>
              </div>
            </div>    
        <% end %>
      </div>
    </div>
  </div>
</div>