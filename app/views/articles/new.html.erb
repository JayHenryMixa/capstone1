<h1>Submit New Article</h1>
<%= form_tag '/articles', method: :post do %>

  <div>
    <%= label_tag :title %>
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :author %>
    <%= text_field_tag :author %> 
  </div>

  <div>
    <%= label_tag :content %>
    <%= text_field_tag :content %>
  </div>

  <div>
    <%= submit_tag "Add Article" %>
  </div>

  <h4><a href="/articles">Back To Articles </a></h4>

<% end %> 