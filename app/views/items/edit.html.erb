<div class="block-heading-two">
  <h3><span>Edit Item</span></h3>
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-6 text-left">
      <%= form_tag "/items/#{@item.id}", method: :patch do %>
        <div>
          <%= label_tag :image %>
          <%= text_field_tag :image %>
        </div>

        <div>
          <%= label_tag :name %>
          <%= text_field_tag :name, @item.name %>
        </div>
    
        <div>
          <%= label_tag :description %>
          <%= text_field_tag :description, @item.description %>
        </div>

        <div>
          <%= label_tag :price %>
          <%= text_field_tag :price, @item.price %>
        </div>

        <div>
          <%= label_tag :location %>
          <%= text_field_tag :location, @item.location %>
        </div>
      
        <div>
          <%= label_tag :shipping %>
          <%= text_field_tag :shipping, @item.shipping %>
        </div>
      <div>
        <%= submit_tag "Edit Item" %>
      </div>
<h4><%= link_to "delete", "/items/#{@item.id}", method: :delete, data: {confirm: "Are you sure?"} %></h4>
    </div>
  </div> 
</div>   
  <% end %>
  </div>