<h1>Index of Items posted by Users</h1>

<div class='container'>
  <div class="img">
    <div class="img-box-4 text-center">
      <div class="row">
        
          <h4><a href="/items/new">Post a New Item-</a> Not a member?<a href="/users/sign_up"> Sign Up!</h4>
          <% @items.each do |item| %>
            <div class="col-md-3 col-sm-6" style="width:287.5px;height:450px;">
         
              <div class="img-box-4-item">
               
                <a href="#" class="lightbox">
                <%= image_tag(item.get_first_image, width: '240', height: '190', ) %></a>
                
                <div class="img-box-4-content">
            
                  <h4>Name: <a href="/items/<%= item.id %>"><%= item.name %></a></h4>

                
                  <div class="bor bg-red"></div>
                  
                  <p>User/Poster: <a href="/profiles/<%= item.user.id %>"><%= item.user_full_name %></a></p>

                  <p>Lineage Coral: <a href="/holders/<%= item.holder.id %>"><%= item.holder.specimen.name %></a></p>

                  <p>Price: <%= item.price %></p>
                  
                </div>
              </div>
            </div>
          <% end %>
                
          
        </div>
      
    </div>
  </div>
</div>

    