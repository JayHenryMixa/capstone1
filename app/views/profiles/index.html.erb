<h1>Fragit Users</h1>

<div class='container'>
  <div class="img">
    <div class="img-box-4 text-center">
      <div class="row">

        <% @users.each do |user| %>
        <div class="col-md-3 col-sm-6" style="width:287.5px;height:350px;">
    
          <div class="img-box-4-item">
          
            <img src="<%= user.user_image %>" style="width:200px;height:190px;"/>

            <div class="img-box-4-content">
              <div class="bor bg-purple"></div>

              <p>User: <a href="/profiles/<%= user.id %>"><%= user.first_name %> <%= user.last_name %></a></p>
              <p>Email: <%= user.email %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>